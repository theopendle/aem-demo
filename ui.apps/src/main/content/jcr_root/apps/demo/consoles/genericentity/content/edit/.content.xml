<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:mixinTypes="[sling:VanityPath]"
          jcr:primaryType="nt:unstructured"
          jcr:title="Edit Entity"
          sling:resourceType="granite/ui/components/shell/propertiespage"
          backHref="${empty header.Referer ? granite:concat(&quot;/mnt/overlay/demo/consoles/genericentity/content/admin.html&quot;, granite:encodeURIPath(granite:relativeParent(requestPathInfo.suffix, 1))) : header.Referer}"
          consoleId="demo-generic-entities"
          formId="editEntityForm">
    <head jcr:primaryType="nt:unstructured">
        <clientlibs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
                categories="[coralui3,granite.ui.coral.foundation,demo.generic-entities.edit]"/>
    </head>
    <content
            granite:class="centered"
            granite:id="editEntityForm"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form"
            action="${granite:encodeURIPath(requestPathInfo.suffix)}"
            dataPath="${granite:encodeURIPath(requestPathInfo.suffix)}"
            foundationForm="{Boolean}true"
            method="post"
            style="vertical">
        <items jcr:primaryType="nt:unstructured">
            <fixedcolumns
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <formProxy
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="demo/consoles/genericentity/components/formProxy"/>
                        </items>
                    </column>
                </items>
            </fixedcolumns>
        </items>
        <successresponse
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/responses/redirect"
                href="${empty header.Referer ? granite:concat(&quot;/mnt/overlay/demo/consoles/genericentity/content/admin.html&quot;, granite:encodeURIPath(granite:relativeParent(requestPathInfo.suffix, 1))) : header.Referer}"
        />
    </content>
    <title
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/text"
            text="Edit Entity"/>
</jcr:root>
