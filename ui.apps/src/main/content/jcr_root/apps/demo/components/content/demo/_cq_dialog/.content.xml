<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Demo"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="demo.editor">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <checkbox-toggle
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Checkbox Toggle"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <master
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    name="./master"
                                                    text="Disable first field"
                                                    uncheckedValue="false"
                                                    value="true">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        toggle-checkbox_master=""/>
                                            </master>
                                            <first
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="First">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        toggle-checkbox_slave="true"/>
                                            </first>
                                            <second
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Second">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        toggle-checkbox_slave="false"/>
                                            </second>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </checkbox-toggle>
                    <text-toggle
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Text Toggle"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <master
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Master"
                                                    name="./master2">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        toggle-textfield_master=""/>
                                            </master>
                                            <slave
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Slave"
                                                    uncheckedValue="false"
                                                    value="true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <red
                                                            jcr:primaryType="nt:unstructured"
                                                            text="red"
                                                            value="red"/>
                                                    <blue
                                                            jcr:primaryType="nt:unstructured"
                                                            text="blue"
                                                            value="blue"/>
                                                </items>
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        toggle-textfield_slave=""/>
                                            </slave>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </text-toggle>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
